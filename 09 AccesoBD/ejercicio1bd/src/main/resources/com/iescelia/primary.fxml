<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iescelia.PrimaryController">
   <children>
      <Label text="Primary View" />
      <Button fx:id="primaryButton" onAction="#loadDataConsole" text="Cargar datos en consola" />
      <Button fx:id="primaryButton" onAction="#loadDataTextArea" text="Cargar datos en TextArea" />
      <TextArea prefHeight="200.0" prefWidth="200.0" fx:id="textArea" />
      <Button fx:id="primaryButton" onAction="#loadDataTableView" text="Cargar datos en TableView" />
      <TableView prefHeight="300.0" prefWidth="200.0" fx:id="tableView">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="100" />          
          <TableColumn fx:id="colNick" text="Nick" prefWidth="200" />
          <TableColumn fx:id="colEmail" text="Email" prefWidth="300" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
